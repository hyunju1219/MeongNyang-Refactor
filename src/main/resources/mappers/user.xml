<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.meongnyang.shop.repository.UserMapper">
    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        insert into user_tb
        values(default, #{username}, #{password}, #{name}, #{phone}, #{membershipLevelId}, now())
    </insert>


    <select id="findByUsername" resultType="com.meongnyang.shop.entity.User">
        select
            id,
            username,
            password,
            name,
            phone,
            membership_level_id,
            create_date
        from
            user_tb
        where
            username = #{username}
    </select>
    <select id="findById" resultType="com.meongnyang.shop.entity.User">
        select
        id,
            username,
            password,
            name,
            phone,
            membership_level_id,
            create_date
        from
            user_tb
        where
            id = #{id}
    </select>
    <update id="updateUserById">
        update
            user_tb
        set
            username = #{username},
            password = #{password},
            name = #{name},
            phone = #{phone}
        where
            id = #{id}
    </update>
</mapper>
