<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.meongnyang.shop.repository.user.UserOrderMapper">

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        insert into order_tb
        values(default, #{userId}, #{paymentId}, #{totalPrice}, #{orderItemCount}, now(), #{orderStatus}, #{orderName},
        #{phone}, #{zipcode}, #{addressDefault}, #{addressDetail}, #{email}, #{request}, #{paymentType})
    </insert>
    <delete id="deleteOrderById">
        delete
        from
            order_tb
        where
            id = #{id}
    </delete>
    <select id="findOrderById" resultType="com.meongnyang.shop.entity.Order">
        select
            *
        from
            order_tb
        where
            id = #{id}
    </select>

    <update id="modifyOrder">
        update order_tb
        set
            product_name = #{orderItemCount},
            payment_id = #{paymentId},
            order_date = now(),
            order_name = #{orderName},
            phone = #{phone},
            zipcode = #{zipcode},
            address_default = #{addressDefault},
            address_detail = #{addressDetail},
            email = #{email},
            request = #{request},
            payment_type = #{paymentType}

        where
        id = #{id}
    </update>

</mapper>


